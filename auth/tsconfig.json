{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6", // compile to es6
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./build",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "pretty": true
  },
  "paths": {
    "@auth/*": ["src/*"],
    "tsoa": ["node_modules/tsoa/dist"]
  }
}
