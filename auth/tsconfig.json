{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "src/swagger/*.ts",
    "tsoa.json" // Add this line to include the TSOA configuration file
  ],
  "exclude": ["node_modules", "dist"],
  "lib": ["es2015", "es6", "dom"],
  "typeRoots": ["node_modules/@types"],
  "types": ["node", "express"]
}
