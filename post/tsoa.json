{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@post/*": ["src/*"]
    }
  },
  "entryFile": "src/server.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/*.controllers.ts"],
  "spec": {
    "outputDirectory": "dist/swagger",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "src/routes"
  }
}
